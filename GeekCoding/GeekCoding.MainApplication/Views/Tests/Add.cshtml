@model GeekCoding.MainApplication.ViewModels.TestsViewModel


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
</head>
<body>

<h4>Tests</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Add" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TestNumber" class="control-label"></label>
                <input asp-for="TestNumber" class="form-control" />
                <span asp-validation-for="TestNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FisierIn" class="control-label"></label>
                <input asp-for="FisierIn" class="form-control" />
                <span asp-validation-for="FisierIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FisierOk" class="control-label"></label>
                <input asp-for="FisierOk" class="form-control" />
                <span asp-validation-for="FisierOk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TestInput" class="control-label"></label>
                <br />
                <textarea asp-for="TestInput"></textarea>
            </div>

            <div class="col-md-12">
                <div class="form-group">
                    <input type="file" name="fileInput" />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="TestOutput" class="control-label"></label>
                <br />
                <textarea asp-for="TestOutput"></textarea>
            </div>

            <div class="col-md-12">
                <div class="form-group">
                    <input type="file" name="fileOutput" />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Scor" class="control-label"></label>
                <input asp-for="Scor" class="form-control" />
                <span asp-validation-for="Scor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>

            <input type="hidden" name="ProblemId" value="@ViewBag.ProblemId" />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">  <i class="glyphicon glyphicon-arrow-left"></i> &nbsp;Back to List</a>
</div>

</body>
</html>
