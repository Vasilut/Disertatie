@model IEnumerable<GeekCoding.Data.Models.Problem>

@if (User.IsInRole("Admin"))
{
    <li><a asp-area="" asp-controller="Problems" asp-action="Add">Create Problem</a></li>
}

<div class="table-responsive">
<table class="table table-striped">
    <thead>
        <tr class="reactable-column-header">
            <th>
                @Html.DisplayNameFor(model => model.ProblemName)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.ProblemContent)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Dificulty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AverageAcceptance)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="reactable-data">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProblemName)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.ProblemContent)
                    </td>*@
                <td>
                    <span class="label label-info"> @Html.DisplayFor(modelItem => item.Dificulty)</span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AverageAcceptance)%
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.ProblemId">Edit</a>
                    }
                    <a asp-action="GetProblem" asp-route-id="@item.ProblemId">Details</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.ProblemId">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
</div>


