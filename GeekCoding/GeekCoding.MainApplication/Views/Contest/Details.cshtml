@model GeekCoding.Data.Models.Contest

@{
    ViewData["Title"] = "Details";
}

<div class="row" style="margin-top:50px;">

    <div class="col-lg-8 col-md-8">
        <div class="well well-sm">
            <h4>@Model.Title</h4>
            <hr />
            @Html.Raw(@Model.Content)
            @if (User.Identity.IsAuthenticated)
            {
                <div class="panel-heading">
                    <form method="post" asp-action="RegisterUser">
                        <div class="form-group">
                            <input type="submit" value="Register" class="btn-primary pull-right" />
                        </div>
                        <input type="hidden" asp-for="ContestId" />
                    </form>
                </div>
            }
            <table class="table table-hover" style="margin-top:50px;">
                <thead>

                    <tr>
                        <th>
                            <font style="vertical-align: inherit;">
                                <font style="vertical-align: inherit;">
                                    StartDate
                                </font>
                            </font>
                        </th>
                        <th>
                            <font style="vertical-align: inherit;">
                                <font style="vertical-align: inherit;">
                                    EndDate
                                </font>
                            </font>
                        </th>
                    </tr>
                </thead>
                <tbody class="reactable-data">
                    <tr>
                        <td>
                            <font style="vertical-align: inherit;">
                                <font style="vertical-align: inherit;">
                                    <span class="label label-info"> @Model.StartDate </span>
                                </font>
                            </font>
                        </td>
                        <td>
                            <font style="vertical-align: inherit;">
                                <font style="vertical-align: inherit;">
                                    <span class="label label-info">  @Model.EndDate </span>
                                </font>
                            </font>
                        </td>

                    </tr>

                </tbody>
            </table>
        </div>
    </div>
    <div class="col-lg-4 col-md-4">
        <div class="well well-sm">

        </div>
    </div>
</div>
<div>
    <a asp-action="Index"> <i class="glyphicon glyphicon-arrow-left"></i> &nbsp; Back to List</a>
</div>
