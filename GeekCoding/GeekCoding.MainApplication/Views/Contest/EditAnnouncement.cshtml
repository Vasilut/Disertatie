@model GeekCoding.Data.Models.Announcement

@{
    ViewData["Title"] = "EditAnnouncement";
}

<h2>EditAnnouncement</h2>

<h4>Announcement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditAnnouncement">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AnnouncementId" />
            <input type="hidden" asp-for="ContestId" />

            <div class="form-group">
                <label asp-for="AnnouncementContent" class="control-label"></label>
                <textarea asp-for="AnnouncementContent"></textarea>
                <span asp-validation-for="AnnouncementContent" class="text-danger"></span>
            </div>
 
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Announcement" asp-route-Id="@Model.ContestId"> <i class="glyphicon glyphicon-arrow-left"></i> &nbsp; Back to announcement list</a>
</div>

