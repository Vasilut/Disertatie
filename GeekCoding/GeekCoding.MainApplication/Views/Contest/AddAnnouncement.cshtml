@model GeekCoding.MainApplication.ViewModels.ContestAnnouncementViewModel

@{
    ViewData["Title"] = "AddAnnouncement";
}

<h2>AddAnnouncement</h2>

<h4>Announcement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAnnouncement">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AnnouncementContent" class="control-label"></label>
                <textarea asp-for="AnnouncementContent"></textarea>
